<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>io.github.dawdler-series</groupId>
		<artifactId>dawdler-boot</artifactId>
		<version>1.0.7-jdk21-RELEASES</version>
	</parent>
	<artifactId>dawdler-boot-web</artifactId>
	<name>dawdler-boot-web</name>
	<dependencies>
		<dependency>
			<groupId>io.github.dawdler-series</groupId>
			<artifactId>dawdler-client-plug-web</artifactId>
		</dependency>
		<dependency>
			<groupId>jakarta.servlet</groupId>
			<artifactId>jakarta.servlet-api</artifactId>
		</dependency>
		<dependency>
			<groupId>jakarta.websocket</groupId>
			<artifactId>jakarta.websocket-api</artifactId>
		</dependency>
		<dependency>
			<groupId>jakarta.websocket</groupId>
			<artifactId>jakarta.websocket-client-api</artifactId>
		</dependency>
		<dependency>
			<groupId>io.github.dawdler-series</groupId>
			<artifactId>dawdler-boot-classloader-core</artifactId>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<encoding>${project.build.sourceEncoding}</encoding>
					<source>21</source>
					<target>21</target>
					<compilerArgs>
						<arg>--add-exports</arg>
						<arg>java.base/jdk.internal.loader=dawdler.boot.web</arg>
						<arg>--add-exports</arg>
						<arg>java.base/jdk.internal.misc=dawdler.boot.web</arg>
						<arg>--add-exports</arg>
						<arg>java.base/jdk.internal.perf=dawdler.boot.web</arg>
						<arg>--add-exports</arg>
						<arg>java.base/jdk.internal.loader=dawdler.util</arg>
						<arg>--add-exports</arg>
						<arg>java.base/jdk.internal.loader=dawdler.core</arg>
						<arg>--add-exports</arg>
						<arg>java.base/jdk.internal.loader=dawdler.boot.classloader</arg>
					</compilerArgs>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>